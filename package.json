{
  "name": "gcp-billing-watcher",
  "displayName": "Google Cloud Billing Watcher",
  "description": "Display Google Cloud billing status (current month, annual total, etc.) in real-time in the status bar.",
  "version": "0.3.14",
  "publisher": "kimisan",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kkitase/gcp-billing-watcher.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gcpBilling.refresh",
        "title": "Google Cloud Billing: Refresh Now"
      },
      {
        "command": "gcpBilling.menu",
        "title": "Google Cloud Billing: Show Menu"
      },
      {
        "command": "gcpBilling.openConsole",
        "title": "Google Cloud Billing: Go to Google Cloud Console"
      },
      {
        "command": "gcpBilling.showLogs",
        "title": "Google Cloud Billing: Show Logs"
      }
    ],
    "configuration": {
      "title": "Google Cloud Billing Watcher",
      "properties": {
        "gcpBilling.projectId": {
          "type": "string",
          "default": "",
          "description": "Project ID",
          "order": 1
        },
        "gcpBilling.datasetId": {
          "type": "string",
          "default": "billing_export",
          "description": "BigQuery dataset name. Default is billing_export.",
          "order": 2
        },
        "gcpBilling.credentialsPath": {
          "type": "string",
          "default": "",
          "description": "Path to service account JSON key file (uses ADC if omitted).",
          "order": 3
        },
        "gcpBilling.refreshIntervalMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "description": "Refresh interval (minutes). Minimum 5 minutes.",
          "order": 4
        },
        "gcpBilling.monthlyBudget": {
          "type": "number",
          "default": 0,
          "description": "Monthly budget (Currency unit, e.g. USD/JPY). Set to 0 to disable alerts.",
          "order": 5
        },
        "gcpBilling.language": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "en",
            "ja"
          ],
          "enumDescriptions": [
            "Auto (System Language)",
            "English",
            "Japanese"
          ],
          "description": "Language to use for the extension UI.",
          "order": 6
        },
        "gcpBilling.skipSslVerification": {
          "type": "boolean",
          "default": false,
          "description": "Skip SSL certificate verification. Use this if you encounter 'unable to get issuer certificate' errors in corporate proxy environments. USE AT YOUR OWN RISK.",
          "order": 7
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && npx vsce package --out release/"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "google-auth-library": "^9.0.0"
  }
}
