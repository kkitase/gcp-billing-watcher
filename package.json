{
  "name": "gcp-billing-watcher",
  "displayName": "GCP Billing Watcher",
  "description": "%extension.description%",
  "version": "0.3.11",
  "publisher": "kimisan",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kkitase/gcp-billing-watcher.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gcpBilling.refresh",
        "title": "%command.refresh%"
      },
      {
        "command": "gcpBilling.menu",
        "title": "%command.menu%"
      },
      {
        "command": "gcpBilling.openConsole",
        "title": "%command.openConsole%"
      },
      {
        "command": "gcpBilling.showLogs",
        "title": "%command.showLogs%"
      }
    ],
    "configuration": {
      "title": "GCP Billing Watcher",
      "properties": {
        "gcpBilling.projectId": {
          "type": "string",
          "default": "",
          "description": "%config.projectId%",
          "order": 1
        },
        "gcpBilling.datasetId": {
          "type": "string",
          "default": "billing_export",
          "description": "%config.datasetId%",
          "order": 2
        },
        "gcpBilling.credentialsPath": {
          "type": "string",
          "default": "",
          "description": "%config.credentialsPath%",
          "order": 3
        },
        "gcpBilling.refreshIntervalMinutes": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "description": "%config.refreshInterval%",
          "order": 4
        },
        "gcpBilling.monthlyBudget": {
          "type": "number",
          "default": 0,
          "description": "%config.monthlyBudget%",
          "order": 5
        },
        "gcpBilling.language": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "en",
            "ja"
          ],
          "enumDescriptions": [
            "Auto (System Language)",
            "English",
            "Japanese"
          ],
          "description": "%config.language%",
          "order": 6
        },
        "gcpBilling.skipSslVerification": {
          "type": "boolean",
          "default": false,
          "description": "%config.skipSslVerification%",
          "order": 7
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && npx vsce package --out release/"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "google-auth-library": "^9.0.0"
  }
}
